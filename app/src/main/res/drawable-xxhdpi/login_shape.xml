<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
<item android:state_pressed="true">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="@color/color_atto_main_opa"/>
        <stroke android:width="2dp"
            android:color="@color/color_atto_main"/>
        <gradient
            android:angle="0"
            android:centerColor="#d676b6"
            android:endColor="#ec6d5a"
            android:startColor="#377fba"
            android:type="linear" />
        <corners android:radius="5dp" />
        <padding
            android:bottom="16dp"
            android:top="16dp"
            android:left="16dp"/>
    </shape>
</item>
<item android:state_pressed="false">
    <shape xmlns:android="http://schemas.android.com/apk/res/android">
        <solid android:color="@color/color_atto_main_opa"/>
        <stroke android:width="2dp"
            android:color="@color/white"/>
        <gradient
            android:angle="0"
            android:centerColor="#d676b6"
            android:endColor="#ec6d5a"
            android:startColor="#377fba"
            android:type="linear" />
        <corners android:radius="5dp" />
        <padding
            android:bottom="16dp"
            android:top="16dp"
            android:left="16dp"/>
    </shape>
</item>
</selector>
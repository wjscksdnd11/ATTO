<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:state_pressed="true">
        <shape>
            <stroke android:color="@color/white"
                android:width="1dp"/>
            <corners android:radius="20dp"/>
            <padding
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:top="4dp" />
        </shape>
    </item>
    <item android:state_pressed="false">
        <shape>
            <stroke android:color="@color/white"
                android:width="1dp"/>
            <corners android:radius="20dp"/>
            <padding
                android:left="4dp"
                android:right="4dp"
                android:bottom="4dp"
                android:top="4dp" />
        </shape>
    </item>
</selector>
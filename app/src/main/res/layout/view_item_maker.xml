<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/activity_horizontal_margin">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/img_maker_profile"
        android:background="@drawable/image_shape" />

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ratingbar_maker_grade"
        android:layout_below="@+id/img_maker_profile"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_detail_maker_nickname"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/img_maker_profile"
        android:layout_toEndOf="@+id/img_maker_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_detail_maker_intro"
        android:layout_below="@+id/text_detail_maker_nickname"
        android:layout_toRightOf="@+id/img_maker_profile"
        android:layout_toEndOf="@+id/img_maker_profile" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/text_detail_maker_keyword"
        android:layout_below="@+id/text_detail_maker_intro"
        android:layout_toRightOf="@+id/img_maker_profile"
        android:layout_toEndOf="@+id/img_maker_profile" />

</RelativeLayout>
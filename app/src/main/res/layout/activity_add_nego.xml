<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atto.developers.atto.AddNegoActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/atto_bg">
    </android.support.v7.widget.Toolbar>

    <Button
        android:id="@+id/btn_nego_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentStart="true"
        android:background="@color/color_btn"
        android:text="@string/text_nego_register"
        android:textColor="@color/white" />

    <Button
        android:background="@drawable/btn_shape"
        android:textColor="@color/white"
        android:id="@+id/btn_move_setting_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="4dp"
        android:layout_above="@+id/btn_nego_register"
        android:layout_alignEnd="@+id/btn_nego_register"
        android:layout_alignLeft="@+id/btn_nego_register"
        android:layout_alignRight="@+id/btn_nego_register"
        android:layout_alignStart="@+id/btn_nego_register"
        android:text="@string/btn_setting_price" />
</RelativeLayout>

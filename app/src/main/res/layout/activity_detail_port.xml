<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.atto.developers.atto.DetailPortActivity">

    <ImageView
        android:id="@+id/img_detail_port"
        android:layout_width="match_parent"
        android:layout_height="480dp"
        android:layout_above="@+id/btn_detail_port_move_trade"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop" />

    <Button

        android:id="@+id/btn_detail_port_move_trade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/img_detail_port"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/img_detail_port"
        android:background="@color/color_btn"
        android:text="@string/btn_detail_port_move_trade"
        android:textColor="@color/white" />

    <ImageButton
        android:scaleType="centerCrop"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:id="@+id/btn_detail_port_cancel"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_cancel"
        android:background="@null"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/btn_detail_port_move_trade"
        android:layout_alignLeft="@+id/img_detail_port"
        android:layout_alignStart="@+id/img_detail_port"
        android:background="@color/color_detail_port_text_bg"
        android:orientation="vertical"
        android:padding="@dimen/activity_horizontal_margin">

        <TextView
            android:id="@+id/text_detail_port_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_detail_port_title"
            android:textColor="@color/white"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textSize="20sp"/>

        <TextView
            android:id="@+id/text_detail_port_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#HashTag"
            android:textAppearance="?android:attr/textAppearance"
            android:textColor="@color/white"
            android:textSize="14sp" />

    </LinearLayout>
</RelativeLayout>

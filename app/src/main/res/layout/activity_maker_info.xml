<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.atto.developers.atto.MakerInfoActivity" >

    <android.support.v7.widget.Toolbar
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/main_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:theme="@style/ToolBarStyle"
        android:background="@drawable/toolbar_underline_background">
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/img_maker_profile"
            android:src="@drawable/sample_profile"
            android:layout_marginTop="36dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수제잼장인"
            android:id="@+id/text_maker_nickname"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp" />
    </LinearLayout>

    <RelativeLayout

        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="아토 등록 번호"
            android:id="@+id/atto_register_num"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_marginTop="20dp"
            android:layout_alignParentTop="true"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="사업자 번호"
            android:id="@+id/business_num"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/atto_register_num"
            android:layout_alignLeft="@+id/atto_register_num"
            android:layout_alignStart="@+id/atto_register_num"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="카테고리"
            android:id="@+id/category_push"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/business_num"
            android:layout_alignLeft="@+id/business_num"
            android:layout_alignStart="@+id/business_num"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A160808001"
            android:id="@+id/text_atto_register_num"
            android:layout_alignBottom="@+id/atto_register_num"
            android:layout_toRightOf="@+id/atto_register_num"
            android:layout_toEndOf="@+id/atto_register_num"
            android:layout_marginLeft="28dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123-45-6789"
            android:id="@+id/text_business_num"
            android:layout_alignBottom="@+id/business_num"
            android:layout_alignLeft="@+id/text_atto_register_num"
            android:layout_alignStart="@+id/text_atto_register_num" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(푸시 알림 기준입니다.)"
            android:id="@+id/textView6"
            android:layout_alignBottom="@+id/category_push"
            android:layout_toRightOf="@+id/category_push"
            android:layout_toEndOf="@+id/category_push"
            android:layout_marginLeft="5dp" />

        <ImageView
            android:layout_width="250dp"
            android:layout_height="100dp"
            android:id="@+id/imageView3"
            android:background="@color/white"
            android:layout_below="@+id/category_push"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="수제잼, 수제청"
            android:id="@+id/textView7"
            android:layout_alignBottom="@+id/imageView3"
            android:layout_alignLeft="@+id/imageView3"
            android:layout_alignStart="@+id/imageView3"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="10dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_alignParentBottom="true"
            android:layout_alignRight="@+id/imageView6"
            android:layout_alignEnd="@+id/imageView6"
            android:layout_alignLeft="@+id/imageView6"
            android:layout_alignStart="@+id/imageView6"
            android:layout_below="@+id/imageView6">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="수정 및 추가는 아토관리자에게 연락해야가능합니다."
                android:id="@+id/contact_atto"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="10dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이메일 : admin@atto.com"
                android:id="@+id/text_email_atto"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="연락처 : 070-0880-8008"
                android:id="@+id/text_contact_atto"
                android:layout_marginLeft="5dp" />

        </LinearLayout>



        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/imageView6"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/edit_shape"/>

    </RelativeLayout>

</LinearLayout>

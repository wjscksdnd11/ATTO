<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DetailMakerActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/main_toolbar"
        android:minHeight="?attr/actionBarSize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/atto_bg">
    </android.support.v7.widget.Toolbar>


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_item_maker"
        android:id="@+id/view_item_maker"
        android:layout_below="@+id/main_toolbar"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/main_toolbar"
        android:layout_alignEnd="@+id/main_toolbar" />


    <TextView
        android:textColor="@color/white"
        android:background="@color/color_btn"
        android:text="성사된 거래"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_detail_maker_signed"
        android:layout_below="@+id/view_item_maker"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/view_item_maker"
        android:layout_alignEnd="@+id/view_item_maker"
        android:gravity="center"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_detail_maker_signed">

    </ListView>


</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DetailMakerActivity">


    <include
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        layout="@layout/view_item_maker"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/include" />

    <TextView
        android:textColor="@color/white"
        android:background="@color/color_btn"
        android:text="성사된 거래"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_detail_maker_signed"
        android:layout_below="@+id/include"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/include"
        android:layout_alignEnd="@+id/include"
        android:gravity="center"
        android:textSize="16sp" />

    <ListView
        android:id="@+id/rv_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_detail_maker_signed">

    </ListView>


</RelativeLayout>

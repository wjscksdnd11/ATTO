<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.atto.developers.atto.fragment.ReportDialogFragment"
        android:padding="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:orientation="vertical">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="부적절한 게시글로 신고하시겠습니까?"
            android:id="@+id/text_check_logout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:id="@+id/textView8"
        android:background="@drawable/edit_shape"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:gravity="top|left"
        android:text="이놈자슥은 사기꾼입니다" />

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:gravity="center">

            <Button
                android:text="예"
                android:textColor="@color/white"
                android:id="@+id/btn_check_complete"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/color_btn"
                android:layout_marginRight="4dp" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="아니요"
                android:textColor="@color/white"
                android:id="@+id/btn_cancel"
                android:background="@color/color_btn"
                android:layout_marginLeft="4dp" />

        </LinearLayout>

    </LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:id="@+id/text_title"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="26sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginRight="8dp" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_mypage"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/ic_toolbar_list"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_search"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_toolbar_search"
        android:layout_marginRight="@dimen/main_toolbar_ic_margin"
        android:layout_marginTop="8dp" />

    <ImageButton
        android:background="@null"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/ic_notification"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/ic_search"
        android:layout_toStartOf="@+id/ic_search"
        android:src="@drawable/ic_toolbar_alert"
        android:layout_marginRight="@dimen/main_toolbar_ic_margin"
        android:layout_marginTop="8dp" />
</RelativeLayout>
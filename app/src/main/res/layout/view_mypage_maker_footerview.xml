<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/text_sell_management"
        android:textColor="@color/colorAccent"
        android:id="@+id/textView3"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="2dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="5dp">

        <Button
            android:text="@string/btn_footer_move_maker_info"
            android:id="@+id/btn_footer_move_maker_info"
            android:background="@color/color_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:paddingLeft="15dp" />

        <Button
            android:text="@string/btn_footer_move_maker_nego"
            android:id="@+id/btn_footer_move_maker_nego"
            android:background="@color/color_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp" />

        <Button
            android:text="@string/btn_footer_move_accept_wait"
            android:id="@+id/btn_footer_move_accept_wait"
            android:background="@color/color_layout"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:gravity="left|center"
            android:layout_marginTop="5dp"
            android:paddingLeft="15dp" />

    </LinearLayout>
</LinearLayout>